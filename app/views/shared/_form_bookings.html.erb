<%= simple_form_for [@instrument, @booking] do |f| %>
  <%# <%= f.association :instrument, prompt: "Select an instrument" , input_html: { data: { controller: "select" } } %>
  <%= f.input :rent_start_date, as: :date, start_year: Date.today.year,
                              end_year: Date.today.year + 12, discard_day: false,
                              order: [:day, :month, :year]%>
  <%= f.input :rent_end_date, as: :date, start_year: Date.today.year,
                              end_year: Date.today.year + 12, discard_day: false,
                              order: [:day, :month, :year] %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
